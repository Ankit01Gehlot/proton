      "steps":[
        {
          "statements": [
            {"client":"python","query_id":"2000", "depends_on_stream":"limit_by_stream","query_end_timer":4, "query_type": "stream", "query":"select s, latest(i) as i, emit_version() as version from limit_by_stream group by s order by i desc limit 2 by version"},
            {"client":"python", "query_type": "table","depends_on":2000,"depends_on_stream":"limit_by_stream", "query": "insert into limit_by_stream(i, s) values (1, 's1'), (2, 's2'), (3, 's3'), (4, 's4')"}
          ]
        }
      ],
      "expected_results": [
        {
          "query_id":"2000",
          "expected_results":[
            ["s4", 4, 0], ["s3", 3, 0]
          ]
        }
      ]
