namespace nlog;

table TopicMetadata
{
    version: int32;
    create_timestamp: int64;
    last_modify_timestamp: int64;
    /// We like to duplicate namespace here
    /// to avoid re-parsing from the key
    ns: string;
    name: string;
    id: [byte];
    partitions: uint32;
    replicas: uint32;
    compacted: bool;
}

root_type TopicMetadata;
